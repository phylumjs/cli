{
	"name": "@phylum/cli",
	"version": "4.0.0-beta.0",
	"description": "Phylum cli",
	"main": "./dist/index.js",
	"bin": {
		"phylum": "./dist/cli.js"
	},
	"scripts": {
		"compile": "rimraf dist && tsc",
		"compile:watch": "rimraf dist && tsc -w",
		"test": "npm run compile && nyc -- ava -v",
		"test:watch": "npm run compile && concurrently -n tsc,ava \"tsc -w\" \"ava -w -v\"",
		"prepack": "npm run test && npm run compile"
	},
	"dependencies": {
		"@types/command-line-args": "^5.0.0",
		"@types/node": "^10.12.30",
		"command-line-args": "^5.0.2"
	},
	"devDependencies": {
		"@phylum/pipeline": "^4.0.0-beta.9",
		"ava": "^1.3.1",
		"concurrently": "^4.1.0",
		"nyc": "^13.3.0",
		"rimraf": "^2.6.3",
		"typescript": "^3.3.3333"
	},
	"peerDependencies": {
		"@phylum/pipeline": "^4.0.0-beta.9"
	},
	"author": "Max J. Polster",
	"license": "MIT"
}
